Acel = 0;
Frei = 0;

alvo=get_pxinimigo(x,y,obj_nvplayer,RA[0]);
if alvo!=-4 {
    var dis = point_distance(x,y,alvo.x,alvo.y);
    var dir = point_direction(x,y,alvo.x,alvo.y);
    
    if dis&gt;=RA[1] { //se dentro do primeiro raio, avance em sua direção
        var dif = angle_difference(dir,direction);
        if Spd[0]!=Spd[1] Acel = 1;
        Dir[0] = min(Dir[1],abs(dif)*Dir[2])*sign(dif);
        Spd[0] = min(Spd[1],Spd[0]+Spd[2]);
    } else if dis&gt;RA[2] { //se dentro do segundo raio, mantenha-se em foco
        var dif = angle_difference(dir,direction);
        Dir[0] = min(Dir[1],abs(dif)*Dir[2])*sign(dif);
        Spd[0] = max(0,Spd[0]-Spd[2]);
        Frei = 1;
    } else { //se dentro do terceiro raio, fuja à 90°
        var dif = angle_difference(dir,direction);
        dif = angle_difference(dir-90*sign(dif+.1),direction);
        if Spd[0]!=Spd[1] Acel = 1;
        Dir[0] = min(Dir[1],abs(dif)*Dir[2])*sign(dif);
        Spd[0] = min(Spd[1],Spd[0]+Spd[2]);
    }
} else {
    Frei = 1;
    Dir[0] *= 1-Dir[2];
    Spd[0] = max(0,Spd[0]-Spd[2]);
}

image_alpha = min(1,image_alpha+1/room_speed);
direction += Dir[0];
image_angle = direction;
x += lengthdir_x(Spd[0],direction);
y += lengthdir_y(Spd[0],direction);
</string>
